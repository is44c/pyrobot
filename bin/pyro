#!/usr/bin/python2.1

# Pyro - robotics control system in Python

try:
    from pyro.engine import *
except ImportError:
    raise "$PYTHONPATH needs to include dir ABOVE where $PYRO is installed"

robotfile = 0
brainfile = 0
window = 'GL'
simulator = 0

def basichelp():
    print "You need to define PYRO. Try:"
    print "   export PYRO=/usr/local/pyro"
    print "or export PYRO=~/pyro"
    print ""
    print "Also, make sure PYRO is in PYTHONPATH. Try:"
    print "   export PYTHONPATH=$PYTHONPATH:$PYRO"

try:
    import pyro
except:
    import sys
    basichelp()
    sys.exit(1)


def process_options():
    import getopt, sys, string
    global robotfile, brainfile, window, simulator
    try:
        opts, args = getopt.getopt(sys.argv[1:], \
                                   "r:b:hl:g:s:", \
                                   ["robot", "brain", "help", \
                                    "load", "gui", "sim"])
    except getopt.GetoptError:
        # print help information and exit:
        pyro.system.usage()
        sys.exit(1)

    for o, a in opts:
        if o in ("-h", "--help"):
            pyro.system.usage()
            sys.exit(1)
        elif o in ("-l", "--load"):
            pass
        elif o in ("-g", "--gui"):
            window = string.upper(a)
        elif o in ("-r", "--robot"):
            robotfile = a
        elif o in ("-s", "--sim"):
            simulator = a
        elif o in ("-b", "--brain"):
            brainfile = a

if pyro.startup_check():
    import pyro.system
    process_options()
    eng = Engine(robotfile, brainfile, simulator)
    if window == 'GL':
        from pyro.gui.GL import *
        gui = GLgui(eng)
        gui.win.redraw = gui.redraw
    elif window == 'TK':
        from pyro.gui.TK import *
        gui = TKgui(eng)
    elif window == 'TTY':
        gui = pyro.gui.gui("tty gui", {}, eng)
    elif window == 'CURSES':
        from pyro.gui.Curses import Curses as Curses
        gui = Curses("curses gui", {}, eng)

    gui.init()
    gui.run()
    gui.cleanup()
else:
    basichelp()
